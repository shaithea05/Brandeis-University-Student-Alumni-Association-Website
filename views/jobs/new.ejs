<div class="row">
    <div class="side">
        <div class="container" class="data-form">
            <form action="/jobs/create" method="POST">
                <h2>Create a new job:</h2>
                <div class="col-25">
                    <label for="inputTitle">Title*</label>
                </div>
                <div class="col-75">
                    <input type="text" name="title" id="inputTitle" placeholder="Title" autofocus required />
                </div>

                <div class="col-25">
                    <label for="inputCompany">Company*</label>
                </div>
                <div class="col-75">
                    <input type="text" name="company" id="inputCompany" placeholder="Company" required />
                </div>

                <div class="col-25">
                    <label for="inputLocation">Location*</label>
                </div>
                <div class="col-75">
                    <input type="text" name="location" id="inputLocation" placeholder="Location" required />
                </div>

                <div class="col-25">
                    <label for="inputDescription">Description*</label>
                </div>
                <div class="col-75">
                    <input type="text" name="description" id="inputDescription" placeholder="Description" required />
                </div>

                <div class="col-25">
                    <label for="inputRequirements">Requirements*</label>
                </div>
                <div class="col-75">
                    <input type="text" name="requirements" id="inputRequirements" placeholder="Requirements" required />
                </div>

                <div class="col-25">
                    <label for="inputSalary">Salary*</label>
                </div>
                <div class="col-75">
                    <input type="text" name="salary" id="inputSalary" placeholder="Salary" />
                </div>

                <div class="col-25">
                    <label for="inputContactEmail">Contact Email*</label>
                </div>
                <div class="col-75">
                    <input type="text" name="contactEmail" id="inputContactEmail" placeholder="Contact Email" />
                </div>

                <div class="col-25">
                    <label for="inputContactPhone">Contact Phone*</label>
                </div>
                <div class="col-75">
                    <input type="text" name="contactPhone" id="inputContactPhone" placeholder="Contact Phone" />
                </div>

                <div class="col-25">
                    <label for="inputPostDate">Post Date*</label>
                </div>
                <div class="col-75">
                    <input type="date" name="postDate" id="inputPostDate" placeholder="Post Date" />
                </div>

                <!-- <div class="col-25">
                    <label for="inputPostDate">Post Date</label>
                </div>
                <div class="col-75">
                    <input
                    type="text"
                    name="postDate"
                    id="inputPostDate"
                    placeholder="Post Date"
                /> 
                </div> -->

                <div class="col-25">
                    <label for="inputDeadlineDate">Deadline Date*</label>
                </div>
                <div class="col-75">
                    <input type="date" name="deadlineDate" id="inputDeadlineDate" placeholder="Deadline Date" />
                </div>

                <!-- <div class="col-25">
                    <label for="inputDeadlineDate">Deadline Date*</label>
                </div>
                <div class="col-75">
                    <input
                    type="text"
                    name="deadlineDate"
                    id="inputDeadlineDate"
                    placeholder="Deadline Date"
                />    
                </div> -->

                <div class="col-25">
                    <label for="inputIsActive">Is Active</label>
                </div>
                <div class="col-75">
                    <select id="isActive" name="isActive">
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>

                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
    <div class="main">
        <img src="/images/brandyJobs.jpeg" alt="Brandeis People Talking Photo">
    </div>
</div>